<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="autocomplete_google_maps assets backend" inherit_id="web.assets_backend">
            <xpath expr="//script[1]" position="before">
                <t t-set="google_maps_api_key" t-value="request.env['ir.config_parameter'].sudo().get_param('google_maps_api_key')"/>
                <t t-set="google_maps_lang_localization" t-value="request.env['ir.config_parameter'].sudo().get_param('google_maps_lang_localization')"/>
                <t t-set="google_maps_region_localization" t-value="request.env['ir.config_parameter'].sudo().get_param('google_maps_region_localization')"/>
                <script type="text/javascript" t-attf-src="https://maps.googleapis.com/maps/api/js?key=#{google_maps_api_key}&amp;libraries=places"/>
                <script src="https://cdn.rawgit.com/gityopie/v3-utility-library/master.2018-01-18.99a385c/markerclusterer/src/markerclusterer.js"/>
            </xpath>
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/autocomplete_google_maps/static/css/google_places_widget.css"/>
                <script type="text/javascript" src="/autocomplete_google_maps/static/js/autocomplete_google_maps.js"/>
                <script type="text/javascript" src="/autocomplete_google_maps/static/js/map_view_places_autocomplete.js"/>
                <script type="text/javascript" src="/autocomplete_google_maps/static/js/map_view.js"/>
            </xpath>
        </template>
    </data>
</openerp>
