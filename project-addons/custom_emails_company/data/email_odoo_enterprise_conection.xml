<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--Email template -->
        <record id="email_template_edi_odoo_conection" model="mail.template">
            <field name="name">Odoo Enterprise Connection</field>
            <field name="email_from">VISIOTECH - ${(object.company_id.email or user.email)|safe}></field>
            <field name="email_to">${object.email|safe}</field>
            <field name="subject">${object.company_id.name} invitation to connect on Odoo</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<!DOCTYPE html>

            <p>
                ${object.name},
            </p>
            <p>
                You have been invited to connect to "${object.company_id.name}" in order to get access to your documents in OpenERP.
            </p>
            <p>
                To accept the invitation, click on the following link:
            </p>
            <ul>
                <li><a href="${object.signup_url}">Accept invitation to "${object.company_id.name}"</a></li>
            </ul>
            <p>
                Thanks,
            </p>
            <pre>--
            ${object.company_id.name or ''}
            ${object.company_id.email or ''}
            ${object.company_id.phone or ''}
                                </pre>

]]>
            </field>
        </record>
        </data>
</odoo>