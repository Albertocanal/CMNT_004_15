<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_picking_custom_data_valued_v">
        <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="docs" t-as="o">
                    <t t-set="monetary_widget" t-value="o.sale_id.pricelist_id.currency_id.id"/>
                    <t t-if="monetary_widget">
                        <t t-set="monetary_widget" t-value="o.sale_id.pricelist_id.currency_id"/>
                    </t>
                    <t t-if="not monetary_widget">
                        <t t-set="monetary_widget" t-value="o.partner_id.eur_currency"/>
                    </t>
                    <t t-call="custom_report_link.external_layout_custom_picking_valued">
                        <div class="page">
                            <div class="row">
                            <table class="table table-condensed" style="font-size:12px; margin-top: 5%;">
                                <thead>
                                    <tr style="background-color:#A61D34; color:white;">
                                        <th width="15%" style="vertical-align:middle;"><strong>Reference</strong></th>
                                        <th width="40%" style="vertical-align:middle;"><strong>Description</strong></th>
                                        <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Quantity</strong></th>
                                        <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Unit Price</strong></th>
                                        <th width="8%" class="text-center" style="vertical-align:middle;"><strong>Discount</strong></th>
                                        <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Unit Cost</strong></th>
                                        <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Amount</strong></th>
                                    </tr>
                                </thead>
                                <tbody style="color:6D6E70;">
                                    <t t-set="last_pack" t-value="empty"/>
                                    <t t-set="controller" t-value="0"/>
                                    <!-- Calcular la divisa del widget para tener en cuenta casos en los que es null y que no dé error al general el informe -->
                                    <t t-set="monetary_widget" t-value="o.sale_id.pricelist_id.currency_id.id"/>
                                    <t t-if="monetary_widget">
                                        <t t-set="monetary_widget" t-value="o.sale_id.pricelist_id.currency_id"/>
                                    </t>
                                    <t t-if="not monetary_widget">
                                        <t t-set="monetary_widget" t-value="o.partner_id.eur_currency"/>
                                    </t>
                                      <t t-foreach="o.move_lines" t-as="move">
                                          <t t-if="move.sale_line_id.pack_components is True and move.sale_line_id.pack_parent_line_id.product_id.product_tmpl_id.type == 'service'">
                                              <tr>
                                                  <tr t-if="last_pack != move.sale_line_id.pack_parent_line_id.product_id">
                                                      <t t-set="last_pack" t-value="move.sale_line_id.pack_parent_line_id.product_id"/>
                                                      <td colspan="2" style="font-size:14px; font-weight: bold; color:#6D6E70;">Pack: <strong t-field="move.sale_line_id.pack_parent_line_id.product_id"/></td>
                                                      <td class="text-center"><strong t-esc="'%.0f'% move.product_uom_qty"/></td>
                                                      <td class="text-center"><strong t-field="move.sale_line_id.pack_parent_line_id.price_unit"
                                                                                        t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                                      <td class="text-center"><strong t-esc="'%.1f'% move.sale_line_id.pack_parent_line_id.discount"/> %</td>
                                                      <td class="text-center"><strong t-esc="(move.sale_line_id.pack_parent_line_id.price_unit*(1-(move.sale_line_id.pack_parent_line_id.discount/100)))"
                                                                                        t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                                      <td class="text-center"><strong t-esc="(move.sale_line_id.pack_parent_line_id.price_unit*(1-(move.sale_line_id.pack_parent_line_id.discount/100)))*move.sale_line_id.pack_parent_line_id.product_uom_qty"
                                                                                        t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                                  </tr>
                                              <td><span t-field="move.product_id"/></td>
                                              <td style="font-size:10px"><span t-field="move.product_id.product_tmpl_id.description_sale"/></td>
                                              <td class="text-center"></td>
                                              <td class="text-center"></td>
                                              <td class="text-center"></td>
                                              <td class="text-center"></td>
                                              <td class="text-center"></td>
                                            </tr>
                                        </t>
                                      </t>
                                      <tr t-foreach="o.move_lines" t-as="move">
                                          <t t-if="move.sale_line_id.pack_components is False or move.sale_line_id.pack_parent_line_id.product_id.product_tmpl_id.type != 'service'">
                                              <tr t-if="controller == 0">
                                                  <t t-set="controller" t-value="1"/>
                                                  <td colspan="2" style="font-size:14px; font-weight: bold; color:#6D6E70;">No Pack</td>
                                                  <td class="text-center"></td>
                                                  <td class="text-center"></td>
                                                  <td class="text-center"></td>
                                                  <td class="text-center"></td>
                                                  <td class="text-center"></td>
                                              </tr>
                                              <td><span t-field="move.product_id"/></td>
                                              <td style="font-size:10px"><span t-field="move.product_id.product_tmpl_id.description_sale"/></td>
                                              <td class="text-center"><span t-esc="'%.0f'% move.product_uom_qty"/></td>
                                              <td class="text-center"><span t-field="move.sale_line_id.price_unit"
                                                                                   t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                              <td class="text-center"><span t-esc="'%.1f'% move.sale_line_id.discount"></span> %</td>
                                              <td class="text-center"><span t-field="move.price_unit"
                                                                                   t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                              <td class="text-center"><span t-field="move.sale_line_id.price_subtotal"
                                                                                   t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;monetary_widget&quot;}"/></td>
                                          </t>
                                      </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
             </t>
             </t>
         </t>
    </template>

    <template id="report_picking_custom_valued_v">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_report_link.report_picking_custom_data_valued_v" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>


    <report
        id="report_picking_custo_valued_action"
        string="Albarán valorado 11v"
        model="stock.picking"
        report_type="qweb-pdf"
        file="custom_report_link.report_picking_custom_valued_v"
        name="custom_report_link.report_picking_custom_valued_v"
        print_report_name="'%s_%s' % (object.name.replace('\\', '_'), object.partner_id.commercial_partner_id.name)"
    />

    <record id="report_picking_custo_valued_action" model="ir.actions.report">
        <field name="paperformat_id" ref="custom_report_link.paperformat_picking"/>
    </record>

     <record id="stock_custom.action_report_picking_attachments" model="ir.actions.report">
        <field name="paperformat_id" ref="custom_report_link.paperformat_picking"/>
    </record>

</odoo>
