<openerp>
    <data>

        <record id="sale_order_line_tree_reorganize_discount" model="ir.ui.view">
            <field name="name">sale.order.form.reorganize_discount</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="discount" />
                    <field name="price_subtotal" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_tree_reorganize_discount2">
            <field name="name">sale.order.form.reorganize_discount2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_price']" position="replace">
                </xpath>
            </field>
        </record>

    </data>
</openerp>
