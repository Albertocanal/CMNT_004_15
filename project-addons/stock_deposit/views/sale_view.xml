<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <record id="view_order_form_deposit" model="ir.ui.view">
        <field name="name">sale.order.form.deposit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='state']" position="before">
                <field name="deposit"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='no_rappel']" position="before">
                 <field name="deposit"/>
                 <field name="deposit_date" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_sale_stock_deposit" model="ir.actions.act_window">
        <field name="name">deposit.view</field>
        <field name="res_model">stock.deposit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_stock_deposit_tree"/>
        <field name="search_view_id" ref="view_stock_deposit_search"/>
        <field name="context">{'search_default_groupby_state': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                This menu allow you to view deposit
                of products associated to the order.
            </p>
        </field>
    </record>

    <record id="view_order_form_deposit_button" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="stock_reserve_sale.view_order_form_reserve"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    icon="fa-upload"
                    name="%(stock_deposit.action_sale_stock_deposit)d"
                    type="action"
                    attrs="{'invisible': [('deposit_count', '=', 0)]}"
                    context="{'search_default_sale_id': id}">
                        <field name="id" invisible="1"/>
                        <field name="deposit_count" widget="statinfo" string="Deposits" invisible="0"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
