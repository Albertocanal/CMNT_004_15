<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_request_info" model="ir.ui.view">
            <field name="name">Picking Request Info</field>
            <field name="model">picking.rated.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales Order Lines">
                    <group>
                        <field name="total_weight"/>
                        <pre attrs="{'invisible': [('products_wo_weight', '=', 0)]}">
                            <field name="products_wo_weight"/> of the products of the order don't have set the weights,
                             please take the shipping cost as an aproximation
                        </pre>
                    </group>
                    <group>
                        <field name="data" mode="tree">
                            <tree string="Data" editable="bottom">
                                <field name="service"/>
                                <field name="amount"/>
                                <field name="currency"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
