<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_line_add_equivalent_products_form" model="ir.ui.view">
            <field name="name">sale.order.line.equivalent.products.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                    <button name="equivalent_products" string="Equivalent products" type="object" attrs="{'invisible':[('state', 'in', ['cancel','confirmed','exception','done','exception'])]}"/>
                    <newline/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
