<templates id="template" inherit="web.template">
        <t t-name="Sidebar" t-extend="Sidebar">
            <t t-jquery="ul" t-operation="append">
                <li t-if="section.name == 'files' and widget.options.editable and widget.items[section.name].length>1">
                    <a class="btn download_all" target="_self"
                       t-att-href="'/web/binary/downloadAll/model='+widget.env.model+'/id='+widget.env.activeIds[0]">Download All</a>
                </li>
            </t>
        </t>
</templates>
