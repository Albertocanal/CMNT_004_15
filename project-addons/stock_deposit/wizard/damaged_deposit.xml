<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="damaged_deposit_form" model="ir.ui.view">
        <field name="name">damaged.deposit.form</field>
        <field name="model">damaged.deposit</field>
        <field name="arch" type="xml">
            <form string="Deposits">
                <field name="deposit_change_qty" mode="tree">
                    <tree string="Deposits" create="false" delete="false" editable="top">
                        <field name="partner_id"/>
                        <field name="sale_id"/>
                        <field name="picking_id"/>
                        <field name="date"/>
                        <field name="product_id"/>
                        <field name="qty_damaged"/>
                    </tree>
                </field>
                <footer>
                    <button string="Send to Damaged" name="send_damaged_deposits" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Send to Damaged"
        res_model="damaged.deposit"
        src_model="stock.deposit"
        view_id="damaged_deposit_form"
        view_mode="form"
        target="new"
        key2="client_action_multi"
        id="damaged_deposit_action"/>
</odoo>
