<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_add_webservice_data" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <group name="sale_condition" position="inside">
                    <field name="web"/>
                    <field name="show_stock_outside"/>
                </group>
            </field>
        </record>

        <record id="view_template_form_add_conservative_qty" model="ir.ui.view">
            <field name="name">product.template.stock.add_conservative_qty</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="after">
                    <field name="virtual_stock_conservative"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
