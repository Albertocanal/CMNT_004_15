<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.expense.captio</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_expense']" position="inside">
                    <h2>Captio</h2>
                    <div class="row mt16 o_settings_container" id="captio_keys">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="captio_client_id"
                                               class="col-md-3 o_light_label"/>
                                        <field name="captio_client_id"/>
                                    </div>
                                    <div class="row mt16">
                                        <label for="captio_client_secret"
                                               class="col-md-3 o_light_label"/>
                                        <field name="captio_client_secret"/>
                                    </div>
                                    <div class="row mt16">
                                        <label for="captio_customer_key"
                                               class="col-md-3 o_light_label"/>
                                        <field name="captio_customer_key"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>